<Page x:Class="Kazek.Pages.EditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Kazek.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EditPage">

    <Grid>
        <Image Source="/Pages/kazimeg.jpg" Stretch="Fill"/>
        <StackPanel VerticalAlignment="Top" Margin="200,100,205,0">
            <TextBlock Foreground="White"><Run Text="Логин"/></TextBlock>
            <TextBox Text="{Binding Login}" x:Name="LoginTB"/>
            <TextBlock Margin="5" Foreground="White"><Run Text="Пароль"/></TextBlock>
            <TextBox Text="{Binding Surname}" x:Name="PassTB" HorizontalAlignment="Stretch" Margin="5"/>

            <Button Click="RegisterClick" Margin="5" Width="385" Content="Сохранить"/>
        </StackPanel>
    </Grid>
</Page>
